---
export interface Props {
  title: string;
  body: string;
  stack?: string[];
  links?: { type: string; href: string }[];
  date?: string;
  extraInformation?: string;
}

const { title, body, stack, links, date, extraInformation } = Astro.props;
---

<div
  class="bg-slate-100 bg-opacity-40 dark:bg-zinc-800 dark:bg-opacity-10 rounded p-5 mt-5"
>
  <h2 class="dark:text-neutral-50 font-semibold">
    {title}
  </h2>
  <p class="leading-[28px]">
    {body}
  </p>
  <section class="flex justify-between items-center flex-row-reverse">
  {date && (
    <p class="flex justify-end mt-3 dark:text-neutral-600 text-slate-400">
      {date}
    </p>
  )}
  {extraInformation && (
    <p class="flex justify-end mt-3 dark:text-neutral-600 text-slate-400">
      {extraInformation}
    </p>
  )}
  </section>
  {(stack || links) &&
    <section class="flex flex-row flex-wrap gap-3 mt-5">
      {stack && (<div class="flex flex-row gap-3 flex-wrap">
      {stack.map((tech) => {
        return (
          <p class="rounded-lg px-3 py-2 dark:bg-zinc-800 bg-slate-100 w-fit">
            {tech}
          </p>
        )
      })}</div> )}
      {links &&
      <section class="flex flex-row ml-auto gap-3">
        {links.map((link) => {
          return (
            <a
              href={link.href}
              aria-label={link.type.toUpperCase()}
              target="_blank"
              class="rounded-lg px-3 py-2 m-auto dark:bg-zinc-800 bg-slate-100 hover:animate-pulse"
            >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="18"
                  height="18"
                  fill="currentColor"
                  viewBox="0 0 16 16"
                >
                {link.type === "demo" ? (
                  <path
                    fill-rule="evenodd"
                    d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z"
                  />
                  <path
                    fill-rule="evenodd"
                    d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z"
                  />
          ) : (
                  <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z" />
        )} </svg>
            </a>
          )
        })}
      
      </section>}
    </section>}
</div>
