---
import { Icon } from "astro-icon/components";

interface Job {
  title: string;
  role: string;
  current?: boolean;
  tenure?: string;
  type?: string;
  icon: {
    type: string;
  };
}
export interface Props {
  jobs: Job[];
}

const { jobs } = Astro.props;
---

<section class="text-right" id="experience">
  <h2 class="md:text-3xl text-2xl font-bold dark:text-neutral-50 pt-16">
    Experience
  </h2>
  <p class="text-lg w-fit ml-auto pb-4">my professional experience</p>
  {
    jobs.map((job) => (
      <div>
        <hr class="opacity-40" />
        <div class="flex justify-between flex-wrap gap-2 w-full py-3">
          <div class="flex gap-1 flex-col items-start">
            <div class="flex gap-1 items-center">
              <>
                {job.icon?.type && <Icon name={job.icon.type} />}
                <h3 class="font-medium">{job.title}</h3>
              </>{" "}
              â€¢ <p>{job.role}</p>
            </div>
            <p class="text-sm opacity-60">{job.type ?? "Full-Time"}</p>
          </div>
          {job.current ? (
            <div class="flex flex-col gap-1 text-xs">
              <p>{job.tenure}</p>
              <div class="flex gap-1">
                <p>Current</p>{" "}
                <div class="w-2 h-2 rounded-full bg-green-500 shadow-[0px_0px_24px_3px_rgba(0,201,80,1)]" />
              </div>
            </div>
          ) : (
            <p class="text-xs">{job.tenure}</p>
          )}
        </div>
      </div>
    ))
  }
  <a
    href="https://docs.google.com/document/d/1BvBHf1BrVKDeNDExG4-vrVuik2-46lkkHsRJjDHbLyI/edit?usp=sharing"
    target="_blank"
    class="text-xs underline flex gap-1 ml-auto w-fit"
    >View full resume <Icon name="move-up-right" /></a
  >
</section>
