---
export interface Props {
  title: string;
  body: string;
  links: {
    text: string;
    url: string;
  }[];
  icons: {
    type: string;
    url: string;
  }[];
}

const { title, body, links, icons } = Astro.props;
---

<div class="m-auto flex">
  <section>
    <h1 class="text-4xl font-bold dark:text-neutral-50">
      {title}
    </h1>
    <p class="text-xl mt-5 sm:w-3/4">
      {body}
      {links.map((link, i) => (
        <span>
          {i === 3 && "and"}{" "}
          <a
            href={link.url}
            target="_blank"
            class={`font-bold text-transparent bg-clip-text bg-gradient-to-r ${
              i === 0
                ? "from-amber-500 to-orange-500"
                : "from-cyan-500 to-blue-500"
            } hover:animate-pulse`}
          >
            {link.text}
          </a>{" "}
          {i === 0 && "I love to"}{" "}
        </span>
      ))}
    </p>
    <div class="float-right flex mt-5 xl:w-1/2 xl:float-none">
      {icons.map((icon) => (
        <a href={icon.url} target="_blank">
          {" "}
          {icon.type === "twitter" ? (
            <svg
              class="dark:fill-white fill-black w-6 h-6 mr-5 hover:scale-110 transition"
              xmlns="http://www.w3.org/2000/svg"
              height="1em"
              viewBox="0 0 512 512"
            >
              <path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z" />
            </svg>
          ) : (
            <img
              src={`/icons/${icon.type}.svg`}
              alt={`${icon.type} Icon`}
              width="24px"
              height="24px"
              class="mr-5 hover:scale-110 transition"
            />
          )}
        </a>
      ))}
    </div>
  </section>
  <section class="hidden xl:flex xl:justify-end xl:float-right xl:w-1/2">
    <img
      src="/full.webp"
      width="502px"
      height="335px"
      alt="Boston Rohan"
      class="hidden xl:block xl:rounded xl:m-auto"
    />
  </section>
</div>
