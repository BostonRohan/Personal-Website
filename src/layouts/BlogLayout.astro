---
import Layout from "./Layout.astro";

import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
  description: string;
  readingTime: string;
}>;

const { frontmatter } = Astro.props;
---

<Layout {...frontmatter}>
  <slot />
</Layout>

<style is:inline>
  p {
    margin: 0.5rem auto;
    line-height: 1.75rem;
  }
  h1 {
    font-size: 1.25rem;
    line-height: 1.75rem;
    font-weight: 500;
  }
  pre {
    background-color: rgb(30 41 59) !important;
    border-radius: 0.25rem;
    margin: 1rem auto;
    padding: 8px;
  }
  .dark h1 {
    color: rgb(250 250 250);
  }
  .dark pre {
    background-color: #1d1d1f !important;
  }
</style>
